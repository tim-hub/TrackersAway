{
  "name": "beer-blocker",
  "version": "0.1.2",
  "description": "The best cross-platform ads blocker and hosts manager.",
  "main": "src/main/main.js",
  "scripts": {
    "test": "find ./src -name '*.test.js' | xargs mocha -R spec",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "electron src/main/main.js",
    "pack": "electron-builder --dir -mw",
    "dist": "electron-builder",
    "build": "PRODUCTION=true electron-builder -p onTagOrDraft"
  },
  "keywords": [
    "Hosts Manager",
    "Ads Blocker"
  ],
  "author": "",
  "license": "",
  "devDependencies": {
    "axios": "^0.19.0",
    "bulma-tooltip": "^2.0.2",
    "electron": "^5.0.8",
    "electron-builder": "^21.2.0",
    "redux": "^4.0.4",
    "sudo-prompt": "^9.0.0",
    "mocha": "^6.2.0",
    "tslint": "^5.18.0"
  },
  "dependencies": {
    "dotenv": "^8.0.0",
    "electron-reload": "^1.4.1",
    "pino": "^5.13.1",
    "pino-pretty": "^3.2.0"
  },
  "build": {
    "appId": "uno.bai.tim.bear-blocker",
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Office"
    },
    "mac": {
      "category": "public.app-category.productivity"
    }
  }
}
